rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ──────────────────────────────────────────────
    // Helper functions
    // ──────────────────────────────────────────────

    // Check if the request is from an authenticated user
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if the authenticated user is an admin
    function isAdmin() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
    }

    // Check if the authenticated user owns this document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ──────────────────────────────────────────────
    // Users collection
    // ──────────────────────────────────────────────
    match /users/{userId} {
      // Users can read their own profile; admins can read all
      allow read: if isOwner(userId) || isAdmin();

      // Users can create their own profile during signup
      allow create: if isOwner(userId);

      // Users can update their own profile; admins can update any user
      allow update: if isOwner(userId) || isAdmin();

      // Only admins can delete users
      allow delete: if isAdmin();

      // User's personal notifications subcollection
      match /notifications/{notificationId} {
        // Users can read their own notifications; admins can write (to send notifications)
        allow read: if isOwner(userId);
        allow create: if isAdmin();
        allow update: if isOwner(userId); // Mark as read
        allow delete: if isOwner(userId) || isAdmin();
      }
    }

    // ──────────────────────────────────────────────
    // Civic Issues collection
    // ──────────────────────────────────────────────
    match /civicIssues/{issueId} {
      // Any authenticated user can read issues (for citizen app map view, etc.)
      allow read: if isAuthenticated();

      // Any authenticated user can create an issue (citizen reporting)
      allow create: if isAuthenticated();

      // The reporter or admins can update an issue
      allow update: if isAdmin() ||
        (isAuthenticated() && resource.data.reportedBy == request.auth.uid);

      // Only admins can delete issues
      allow delete: if isAdmin();

      // Comments subcollection on issues
      match /comments/{commentId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update, delete: if isAdmin();
      }
    }

    // ──────────────────────────────────────────────
    // Complaints collection (pending uploads / offline)
    // ──────────────────────────────────────────────
    match /complaints/{complaintId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAdmin() ||
        (isAuthenticated() && resource.data.reportedBy == request.auth.uid);
      allow delete: if isAdmin();
    }

    // ──────────────────────────────────────────────
    // Departments collection
    // ──────────────────────────────────────────────
    match /departments/{departmentId} {
      // All authenticated users can read departments (for dropdowns etc.)
      allow read: if isAuthenticated();

      // Only admins can create/update/delete departments
      allow create, update, delete: if isAdmin();
    }

    // ──────────────────────────────────────────────
    // Admin-only collections
    // ──────────────────────────────────────────────

    // Sent notification logs
    match /sentNotifications/{notifId} {
      allow read, write: if isAdmin();
    }

    // Notification logs
    match /notificationLogs/{logId} {
      allow read, write: if isAdmin();
    }

    // Notification templates
    match /notificationTemplates/{templateId} {
      allow read, write: if isAdmin();
    }

    // Automation rules
    match /automationRules/{ruleId} {
      allow read, write: if isAdmin();
    }

    // Auto-assignment rules
    match /autoAssignmentRules/{ruleId} {
      allow read, write: if isAdmin();
    }

    // ──────────────────────────────────────────────
    // Default: deny all unmatched paths
    // ──────────────────────────────────────────────
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
